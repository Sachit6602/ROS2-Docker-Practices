<?xml version='1.0'?>
<robot name="dd_robot_scaled">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="0.35 0.35 0.175"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0.5 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
          <box size="0.35 0.35 0.175"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.45"/>
      <inertia ixx="0.063" ixy="0.0" ixz="0.0" iyy="0.1029" iyz="0.0" izz="0.063"/>
    </inertial>
  </link>

  <!-- Caster -->
  <link name="caster">
    <visual>
      <origin xyz="0.0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.035" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <sphere radius="0.035" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.35"/>
      <inertia ixx="7e-05" ixy="0.0" ixz="0.0" iyy="7e-05" iyz="0.0" izz="7e-05"/>
    </inertial>
  </link>

  <!-- Caster joint -->
  <joint name="joint_caster" type="fixed">
    <parent link="base_link"/>
    <child link="caster"/>
    <origin xyz="0.14 0 -0.0875" rpy="0 0 0" /> 
  </joint>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.07" radius="0.14" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.07" radius="0.14" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.35"/>
      <inertia ixx="0.0049" ixy="0.0" ixz="0.0" iyy="0.00245" iyz="0.0" izz="0.00245"/>
    </inertial>
  </link>

  <!-- Right Wheel joint -->
  <joint name="joint_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.21 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.07" radius="0.14" />
      </geometry>
      <material name="darkgray">
        <color rgba=".2 .2 .2 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.570795 0 0" />
      <geometry>
          <cylinder length="0.07" radius="0.14" />
      </geometry>
    </collision>
    <inertial>
      <mass value="0.35"/>
      <inertia ixx="0.0049" ixy="0.0" ixz="0.0" iyy="0.00245" iyz="0.0" izz="0.00245"/>
    </inertial>
  </link>

  <!-- Left Wheel joint -->
  <joint name="joint_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.21 0" rpy="0 0 0" /> 
    <axis xyz="0 1 0" />
  </joint>

  <!-- Gazebo material tags -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="right_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="left_wheel">
    <material>Gazebo/Black</material>
  </gazebo>
  <gazebo reference="caster">
    <material>Gazebo/Red</material>
  </gazebo>

  <!-- Differential Drive Plugin -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="gazebo_base_controller">
      <odometry_frame>odom</odometry_frame>
      <commandTopic>cmd_vel</commandTopic>
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>
      <update_rate>15.0</update_rate>
      <left_joint>joint_left_wheel</left_joint>
      <right_joint>joint_right_wheel</right_joint>
      <wheel_separation>0.42</wheel_separation>
      <wheel_diameter>0.28</wheel_diameter>
      <max_wheel_acceleration>0.49</max_wheel_acceleration>
      <robotBaseFrame>base</robotBaseFrame>
    </plugin>
  </gazebo>

</robot>
